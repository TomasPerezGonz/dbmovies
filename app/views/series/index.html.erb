<div class="container mt-5 pt-3">
    <h2 class="display-5 text-center">Series</h2>
    
    <div class="row">
        <% @series.each do |serie| %>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="card-custom d-flex flex-column my-4">
                    <p><strong>Nombre: </strong><%= serie.name %></p>
                    <p><strong>Sinopsis:</strong> <%= serie.synopsis %></p>
                    <p><strong>Director:</strong> <%= serie.director %></p>
                </div> 
            </div>
        <% end %>
    </div>
    <div>
        <%= link_to 'Add Documentary', new_serie_path, class: "btn btn-primary" %>
    </div>
</div>
