<div class="container mt-5 pt-3">
    <h2 class="display-5 text-center my-3">Insert a Movie to the database</h2>
    <%= form_with model: @movie, url: movies_path, method: :post, class: "form" do |form| %>
      <div class="form-group">
        <%= form.label :name, "Movie Title", class: "control-label" %>
        <%= form.text_field :name, class: "form-control bg-input" %>
      </div>
      <div class="form-group my-3">
        <%= form.label :synopsis, "Movie Synopsis", class: "control-label" %>
        <%= form.text_area :synopsis, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :director, "Movie Director", class: "control-label" %>
        <%= form.text_field :director, class: "form-control" %>
      </div>
      <div class="form-group mt-3">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>
